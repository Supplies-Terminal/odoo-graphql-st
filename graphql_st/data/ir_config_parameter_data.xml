<odoo noupdate="1">

    <function model="res.config.settings" name="create_st_cache_invalidation_key"/>

    <record id="stcache_invalidation_url" model="ir.config_parameter">
        <field name="key">st_cache_invalidation_url</field>
        <field name="value">http://localhost:3000/cache-invalidate</field>
    </record>

    <record id="stimage_quality" model="ir.config_parameter">
        <field name="key">st_image_quality</field>
        <field name="value">100</field>
    </record>

    <record id="stimage_background_rgba" model="ir.config_parameter">
        <field name="key">st_image_background_rgba</field>
        <field name="value">(255, 255, 255, 255)</field>
    </record>

    <record id="stimage_resize_whitelist" model="ir.config_parameter">
        <field name="key">st_image_resize_whitelist</field>
        <field name="value">[128,140,176,180,200,216,256,288,236,422,644]</field>
    </record>

</odoo>
